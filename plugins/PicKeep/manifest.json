{
  "manifest_version": 2,
  "name": "PicKeep",
  "version": "1.0.0",
  "description": "在线收藏整理图片",
  "icons": {
    "48": "mushroom.png"
  },
  "browser_action": {
    "default_icon": "mushroom.png",
    "default_title": "PicKeep",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ]
}